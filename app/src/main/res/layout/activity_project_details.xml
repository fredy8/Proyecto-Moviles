<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itesm.equipo_x.proyecto_moviles.com.itesm.equipo_x.proyecto_moviles.projects.ProjectDetailsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/projectDetailsNameTV"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/projectEditNameB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/collaborators"
        android:id="@+id/textView"
        android:layout_below="@+id/projectDetailsIV"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/projectDetailsProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addCollaborator"
        android:id="@+id/projectDetailsAddB"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/projectDetailsCollaboratorsLV"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/projectDetailsAddB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editProjectName"
        android:id="@+id/projectEditNameB"
        android:layout_below="@+id/projectDetailsNameTV"
        android:layout_toEndOf="@+id/projectDetailsIV" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/projectDetailsIV"
        android:minHeight="100dp"
        android:layout_below="@+id/projectDetailsNameTV"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/projectDetailsProgressBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/evaluations"
        android:id="@+id/evaluations"
        android:layout_below="@+id/projectDetailsAddB"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/projectDetailsEvaluationsLV"
        android:layout_above="@+id/projectDetailsAddEvaluationB"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/evaluations" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addEvaluation"
        android:id="@+id/projectDetailsAddEvaluationB"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/projectDetailsAddB"
        android:layout_marginBottom="69dp"
        android:layout_alignEnd="@+id/projectDetailsAddB" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Porcentaje de Accesibilidad:"
        android:id="@+id/projectDetailsPercentage"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/projectDetailsPercentageTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NA"
        android:id="@+id/projectDetailsPercentageTV"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir"
        android:id="@+id/fbB"
        android:layout_alignBottom="@+id/projectDetailsPercentageTV"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
